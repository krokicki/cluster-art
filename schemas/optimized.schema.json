{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://cluster-art/schemas/optimized.schema.json",
  "title": "ClusterStatus (Optimized)",
  "description": "Optimized cluster status data stored in cache. Redundant fields removed, slots use sparse format.",
  "type": "object",
  "required": ["hostDetails", "fetchedAt", "raw"],
  "properties": {
    "hostDetails": {
      "type": "array",
      "description": "Detailed information for each host",
      "items": { "$ref": "#/$defs/HostDetail" }
    },
    "activeUsers": {
      "type": "integer",
      "description": "Number of active users"
    },
    "userJobStats": {
      "type": "object",
      "description": "Job statistics per user",
      "additionalProperties": { "$ref": "#/$defs/UserJobStats" }
    },
    "motd": {
      "type": "string",
      "description": "Message of the day"
    },
    "fetchedAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when data was fetched"
    },
    "raw": {
      "type": "object",
      "description": "Raw data from LSF (optimized: hosts, metadata, gpu_jobs removed)",
      "required": ["jobs", "gpu_attribution"],
      "properties": {
        "jobs": {
          "type": "object",
          "required": ["all"],
          "properties": {
            "all": {
              "type": "array",
              "items": { "$ref": "#/$defs/Job" }
            }
          }
        },
        "gpu_attribution": {
          "type": "array",
          "items": { "$ref": "#/$defs/GpuAttribution" }
        }
      }
    }
  },
  "$defs": {
    "HostDetail": {
      "type": "object",
      "description": "Detailed information for a single host (optimized: includes hardwareGroup, sparse slots)",
      "required": ["hostname", "status", "cpus", "gpus", "hardwareGroup", "cpuSlots", "gpuSlots"],
      "properties": {
        "hostname": {
          "type": "string",
          "description": "Host identifier, e.g., 'h04u08'"
        },
        "status": {
          "type": "string",
          "description": "Host status, e.g., 'closed_Full', 'ok'"
        },
        "cpus": {
          "type": "object",
          "properties": {
            "total": { "type": "integer" },
            "used": { "type": "integer" },
            "idle": { "type": "integer" }
          },
          "required": ["total", "used", "idle"]
        },
        "gpus": {
          "type": "object",
          "properties": {
            "total": { "type": "integer" },
            "used": { "type": "integer" },
            "idle": { "type": "integer" }
          },
          "required": ["total", "used", "idle"]
        },
        "utilization": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "CPU utilization percentage"
        },
        "users": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Unique users on this host"
        },
        "gpu_type": {
          "type": "string",
          "description": "GPU type, e.g., 'NVIDIAH200', 'TeslaT4', 'NVIDIAL4'"
        },
        "hardwareGroup": {
          "type": "string",
          "description": "Hardware group name, e.g., '8GPU H200', 'CPU + T4' (embedded, not looked up)"
        },
        "cpuSlots": {
          "type": "object",
          "description": "Sparse map of slot index to username. Only occupied slots are included.",
          "additionalProperties": { "type": "string" },
          "examples": [{ "0": "user1", "5": "user2", "10": "user1" }]
        },
        "gpuSlots": {
          "type": "object",
          "description": "Sparse map of slot index to username. Only occupied slots are included.",
          "additionalProperties": { "type": "string" },
          "examples": [{ "0": "user1", "3": "user2" }]
        },
        "load": { "$ref": "#/$defs/LoadMetrics" }
      }
    },
    "LoadMetrics": {
      "type": "object",
      "description": "System load metrics for a host",
      "properties": {
        "r15s": {
          "type": "number",
          "description": "Load average over 15 seconds"
        },
        "r1m": {
          "type": "number",
          "description": "Load average over 1 minute"
        },
        "r15m": {
          "type": "number",
          "description": "Load average over 15 minutes"
        },
        "ut": {
          "type": "number",
          "description": "CPU utilization percentage"
        },
        "mem": {
          "type": "number",
          "description": "Memory usage in MB"
        },
        "io": {
          "type": "number",
          "description": "Disk I/O in KB/s"
        },
        "pg": {
          "type": "number",
          "description": "Paging activity"
        },
        "tmp": {
          "type": "number",
          "description": "Temp space in MB"
        },
        "swp": {
          "type": "number",
          "description": "Swap usage"
        },
        "load_status": {
          "type": "string",
          "description": "Load status, e.g., 'ok'"
        }
      }
    },
    "UserJobStats": {
      "type": "object",
      "description": "Job statistics for a user",
      "properties": {
        "run": { "type": "integer" },
        "pending": { "type": "integer" },
        "suspended": { "type": "integer" },
        "slots": { "type": "integer" },
        "gpus": { "type": "integer" }
      }
    },
    "Job": {
      "type": "object",
      "description": "Job information",
      "properties": {
        "job_id": { "type": "string" },
        "job_name": { "type": "string" },
        "user": { "type": "string" },
        "status": {
          "type": "string",
          "description": "Job status: 'RUN', 'PEND', etc."
        },
        "exec_host": { "type": "string" },
        "resource_requirements": { "type": "string" },
        "start_time": { "type": "string" },
        "submit_time": { "type": "string" },
        "run_time_seconds": { "type": "number" }
      }
    },
    "GpuAttribution": {
      "type": "object",
      "description": "GPU attribution mapping GPU slots to jobs",
      "properties": {
        "hostname": { "type": "string" },
        "gpu_id": { "type": "integer" },
        "job_id": { "type": "string" },
        "job_name": { "type": "string" },
        "user": { "type": "string" },
        "status": { "type": "string" }
      }
    }
  }
}
